<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.usercenter.activity.FeedActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/user_feed_tool"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#F4D1D1">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FBC02D"
            android:text="意见反馈"/>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="向我们提供建议（150字以内）"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="30dp"
            android:id="@+id/feed_edit"
            android:maxLength="150"
            android:background="@drawable/mysearch"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="4"
                android:id="@+id/feed_text"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="提交"
                android:layout_weight="1"
                android:id="@+id/feed_btn"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>